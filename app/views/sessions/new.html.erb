<div class='row mt-4'>
    <div class='col-sm'>
    </div>
    <div class='col-sm'>
        <h1>Log In</h1>

        <%= form_with model: @user, url: session_path do |form| %>

                <div class="field mb-2">
                    <%= form.label :email %>
                    <%= form.email_field :email, autofocus: true, class: 'form-control' %>
                </div>

                <div class="field mb-2">
                    <%= form.label :password %>
                    <%= form.password_field :password, autocomplete: "off", class: 'form-control' %>
                </div>

                <div class="actions mt-4 text-center">
                    <%= form.submit "Login In", class: 'btn btn-primary btn-block mb-4' %>
                </div>
        <% end %>
    </div>
    <div class='col-sm'>
    </div>
</div>